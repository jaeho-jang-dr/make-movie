# Google AI Studio API Key
# https://aistudio.google.com/app/apikey 에서 발급받으세요
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Google Cloud 서비스 계정 키 경로 (TTS용)
# Google Cloud Console에서 서비스 계정 키를 JSON으로 다운로드 받은 후 경로 지정
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# 선택 사항: 프로젝트 ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# 선택 사항: TTS 설정
TTS_LANGUAGE_CODE=ko-KR
TTS_VOICE_NAME=ko-KR-Neural2-A
TTS_SPEAKING_RATE=0.9
TTS_PITCH=2.0

# 선택 사항: Remotion 렌더링 설정
REMOTION_CONCURRENCY=4
REMOTION_CRF=18
